<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:id="viewContainer" prefWidth="${viewContainer.scene.width}" prefHeight="${viewContainer.scene.height}"
      xmlns:fx="http://javafx.com/fxml" styleClass="button-container"
      fx:controller="Controllers.Queues.QueueArrayController">
    <HBox styleClass="action-group">
        <VBox>
            <Label fx:id="sizeErrorLabel" styleClass="label-no-error"
                   text="Queue size (int) must be provided in order to create a new queue!"/>
            <HBox styleClass="input-row">
                <Label fx:id="sizeLabel" styleClass="label-text" text="Queue size:"/>
                <TextField fx:id="lengthTextfield" styleClass="text-field"/>
            </HBox>
            <HBox styleClass="action-row">
                <Button fx:id="createButton" styleClass="action-button" text="Create"/>
                <Button fx:id="clearButton" styleClass="action-button" text="Clear"/>
            </HBox>
        </VBox>
        <VBox fx:id="actionGroup">
            <Label fx:id="nodeErrorLabel" styleClass="label-no-error"
                   text="Node data must be provided in order to enqueue!"/>
            <HBox styleClass="input-row">
                <Label fx:id="nodeLabel" styleClass="label-text" text="Node data:"/>
                <TextField fx:id="nodeInputTextfield" styleClass="text-field"/>
            </HBox>
            <HBox styleClass="action-row">
                <Button fx:id="enqueueButton" styleClass="action-button" text="Enqueue"/>
                <Button fx:id="dequeueButton" styleClass="action-button" text="Dequeue"/>
            </HBox>
        </VBox>
    </HBox>
    <ScrollPane fitToWidth="true" fitToHeight="true">
        <TilePane fx:id="tilePane" styleClass="scroll-pane" prefWidth="${viewContainer.scene.width}"/>
    </ScrollPane>
    <Button fx:id="backButton" styleClass="selection-button" text="â†»"/>
</VBox>